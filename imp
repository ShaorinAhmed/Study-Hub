<body>
  <header>
    <h1>üìö Study Hub</h1>
    <p>A place for our books, notes & projects</p>
  </header>

  <nav>
    <a onclick="showSection('books')">Books & PDFs</a>
    <a onclick="showSection('notes')">Class Notes</a>
    <a onclick="showSection('images')">Important Pictures</a>
    <a onclick="showSection('projects')">Projects</a>
  </nav>

  <div class="container">
    <!-- Books Section -->
    <div id="books" class="section active">
      <h2>üìñ Books & PDFs</h2>
      <div class="upload-box">
        <input type="file" id="bookUpload" accept=".pdf" multiple>
        <button onclick="uploadFiles('booksList','bookUpload')">Upload</button>
      </div>
      <ul id="booksList" class="file-list"></ul>
    </div>

    <!-- Notes Section -->
    <div id="notes" class="section">
      <h2>üìù Class Notes</h2>
      <div class="upload-box">
        <input type="file" id="noteUpload" accept=".pdf,.txt,.doc,.docx" multiple>
        <button onclick="uploadFiles('notesList','noteUpload')">Upload</button>
      </div>
      <ul id="notesList" class="file-list"></ul>
    </div>

    <!-- Images Section -->
    <div id="images" class="section">
      <h2>üñº Important Pictures</h2>
      <div class="upload-box">
        <input type="file" id="imageUpload" accept="image/*" multiple>
        <button onclick="uploadFiles('imagesList','imageUpload')">Upload</button>
      </div>
      <ul id="imagesList" class="file-list"></ul>
    </div>

    <!-- Projects Section -->
    <div id="projects" class="section">
      <h2>üöÄ Projects & Work</h2>
      <div class="upload-box">
        <textarea id="projectInput" rows="3" placeholder="Write about your project..."></textarea><br><br>
        <button onclick="addProject()">Save Project</button>
      </div>
      <ul id="projectsList" class="file-list"></ul>
    </div>
  </div>

  <script>
    // Navigation
    function showSection(sectionId) {
      document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
      document.getElementById(sectionId).classList.add('active');
    }

    // File Upload Simulation
    function uploadFiles(listId, inputId) {
      let input = document.getElementById(inputId);
      let list = document.getElementById(listId);

      for (let file of input.files) {
        let li = document.createElement('li');
        li.textContent = file.name;
        list.appendChild(li);
      }
      input.value = "";
    }

    // Projects Save
    function addProject() {
      let input = document.getElementById("projectInput");
      let list = document.getElementById("projectsList");

      if (input.value.trim() !== "") {
        let li = document.createElement('li');
        li.textContent = input.value;
        list.appendChild(li);
        input.value = "";
      }
    }
  </script>
</body>
